{
  "name": "review-buddy",
  "version": "1.0.0",
  "description": "AI-powered CI failure reviewer using Google Gemini",
  "main": "src/main.ts",
  "scripts": {
    "build": "esbuild ./src/main.ts --bundle --outdir=dist --platform=node --target=node20.0.0 --format=esm --packages=bundle --banner:js=\"import{createRequire}from'module';const require=createRequire(import.meta.url);\"",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn && yarn run build && yarn run format && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/review-buddy.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "jamacku@redhat.com",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@google/genai": "^1.43.0",
    "@octokit/core": "^7.0.6",
    "@octokit/plugin-throttling": "^11.0.3",
    "@probot/octokit-plugin-config": "^4.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
